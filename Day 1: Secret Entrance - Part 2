#include <stdio.h>

int main() {
    int current = 50;
    int countZero = 0;  
    char Di;
    int num;            

    while (scanf(" %c%d", &Di, &num) == 2) {

      
        int steps = num;

        if (Di == 'L') {
          
            for (long long i = 1; i <= steps; i++) {
                current--;                
                if (current < 0) current = 99;

                if (current == 0) {
                    countZero++;
                }
            }
        }

        else if (Di == 'R') {
        
            for (int i = 1; i <= steps; i++) {
                current++;               
                if (current > 99) current = 0;

                if (current == 0) {
                    countZero++;
                }
            }
        }
    }

    printf("%lld\n", countZero);
    return 0;
}
